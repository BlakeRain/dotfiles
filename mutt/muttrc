set editor = "nvim +':set textwidth=0'"
set edit_headers = yes

set folder = "~/.mail/blakerain.com"
set mbox_type = Maildir
set spoolfile = "+Inbox"
set record = "+Sent"
set postponed = "+Drafts"
set header_cache = "~/.cache/mutt"

set sort = threads
set sort_aux = "reverse-last-date-received"
set date_format = "%y/%m/%d %I:%M %p"

set mailcap_path = "~/.config/mutt/mailcap"
auto_view text/html
alternative_order text/plain text/encriched text/html

set my_smtp_pass = `op item get Proton --fields local_mail_macbook_pro --reveal`
set smtp_url = "smtps://blake.rain@blakerain.com:$my_smtp_pass@127.0.0.1:10025"

set query_command = "abook --mutt-query '%s'"
macro index,pager a "<pipe-message>abook --add-email-quiet<return>" "Add this sender to abook"
bind editor <Tab> complete-query
